{
  "name": "base-node-starter",
  "version": "0.0.1",
  "description": "Base Node Starter Package with Leapfrog Lint and Prettier",
  "main": "index.js",
  "author": "Biplap Bhattarai <bhattaraib58@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhattaraib58/base-node-starter.git.git"
  },
  "keywords": [],
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "build": "rimraf dist && babel src -D --out-dir dist",
    "eslint": "eslint src",
    "eslint:fix": "eslint --fix src",
    "prettier": "prettier --write \"src/**/*.js\"",
    "lint": "yarn prettier && eslint src ; exit 0",
    "lint:fix": "yarn prettier && eslint src  --fix; exit 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,yml,yml,json,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "eslint": "^7.7.0",
    "eslint-config-leapfrog": "^3.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": ">=10"
  }
}
